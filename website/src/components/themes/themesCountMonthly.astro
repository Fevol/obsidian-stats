---
import PluginDataFile from '../../../../theme-data.json' assert { type: 'json' };
import { getThemeCountMonthly, getThemeCountWoRetiredMonthly, getThemeCountRemovedMonthly } from '../../../../src/theme/data';
import DataPerMonthChart from '../svelte/genericCharts/dataPerMonthChart.svelte';

const dataPoints = getThemeCountMonthly(PluginDataFile);
const dataPoints2 = getThemeCountWoRetiredMonthly(PluginDataFile);
const dataPoints3 = getThemeCountRemovedMonthly(PluginDataFile);
---

<DataPerMonthChart dataPoints={dataPoints} title="Total Theme Count" type="line" client:only="svelte" />

<DataPerMonthChart dataPoints={dataPoints2} title="Total Theme Count without Retired Themes" type="line" client:only="svelte" />

<DataPerMonthChart dataPoints={dataPoints3} title="Total Retired Theme Count" type="line" client:only="svelte" />
