---
import PluginDataFile from '../../../../plugin-data.json' assert { type: 'json' };
import PluginPerMonthChart from '../svelte/genericCharts/dataPerMonthChart.svelte';
import { getPluginCountMonthly, getPluginCountWoRetiredMonthly, getPluginCountRemovedMonthly } from '../../../../src/plugin/data';

const dataPoints = getPluginCountMonthly(PluginDataFile);
const dataPoints2 = getPluginCountWoRetiredMonthly(PluginDataFile);
const dataPoints3 = getPluginCountRemovedMonthly(PluginDataFile);
---

<PluginPerMonthChart dataPoints={dataPoints} title="Total Plugin Count" type="line" client:only="svelte" />

<PluginPerMonthChart dataPoints={dataPoints2} title="Total Plugin Count without Retired Plugins" type="line" client:only="svelte" />

<PluginPerMonthChart dataPoints={dataPoints3} title="Total Retired Plugin Count" type="line" client:only="svelte" />
